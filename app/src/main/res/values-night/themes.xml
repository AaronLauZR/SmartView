<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.SmartView" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/white</item>
        <item name="colorPrimaryVariant">@color/light_grey2</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_200</item>
        <item name="colorOnSecondary">@color/white</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="Theme.SmartView.NoActionBar" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="AppTheme" parent="Theme.AppCompat">
    </style>

    <!-- Dark mode -->
    <!-- Screen background if dark mode on -->
    <style name="SCREEN">
        <item name="android:background">@color/dark_grey2</item>
    </style>

    <style name="BACKGROUND_TINT">
        <item name="android:backgroundTint">@color/light_grey2</item>
    </style>

    <style name="PROGRESS_TINT">
        <item name="android:progressTint">@color/white</item>
    </style>

    <style name="PROGRESS_TINT2">
        <item name="android:progressTint">@color/dark_grey</item>
    </style>

    <!-- Card background if light mode on -->
    <style name="CARD">
        <item name="android:background">@color/dark_grey2</item>
    </style>

    <!-- Text Title background if dark mode on -->
    <style name="TEXT_TITLE">
        <item name="android:textColor">@color/white</item>
    </style>

    <!-- Text background if dark mode on -->
    <style name="TEXT">
        <item name="android:textColor">@color/white</item>
    </style>

    <!-- Text background if light mode on -->
    <style name="TEXT2">
        <item name="android:textColor">@color/white</item>
    </style>

    <!-- Text background if light mode on -->
    <style name="TEXT3">
        <item name="android:textColor">@color/white</item>
    </style>

    <!-- Button background if dark mode on -->
    <style name="BUTTON">
        <item name="android:backgroundTint">@color/light_grey</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:iconTint">@color/white</item>
    </style>

    <!-- Button 2 background if light mode on -->
    <style name="BUTTON2">
        <item name="android:backgroundTint">@color/blue2</item>
        <item name="android:textColor">@color/white</item>
    </style>

</resources>